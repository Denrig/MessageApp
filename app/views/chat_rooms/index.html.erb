<!DOCTYPE html>
<html>

    <head>
        <title>Message App</title>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </head>

    <body>
    <div class="toolbar">
        <h2>MessageApp</h2>
        <%= link_to "Logout", "sessions/destroy" %>
    </div>
    
    <div class="errors">
        <% if flash[:login_errors] %>
            <% flash[:login_errors].each do |error| %>
                <p> <%= error %> </p>
            <%end%>
        <%end%>
    </div>

      <%= link_to "Create Room" , "/chat_rooms/new" %>
    <div class="listOfRooms"> 
      <h3>Available rooms</h3>  

        <% @rooms.each do |room| %>
        	<div class="Room">
        	   	<%= link_to room.title , "/messages/"+room.id.to_s %>
        	</div>
        <% end %>
     	
    </div>

        
    </body>
  
    
    

</html>