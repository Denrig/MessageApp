<!DOCTYPE html>
<html>

    <head>
        <title>Message App</title>
    </head>

    <body>
         
        <div class="toolbar">
            <h2>MessageApp  </h2>
            <h3>Register</h3>
            <%= link_to image_tag("Profile.png", class: "Profile"), "users/register", method: :GET %>
        </div>
  
    <br> 
    <div class="errors">
        <% if flash[:login_errors] %>
            <% flash[:login_errors].each do |error| %>
                <p> <%= error %> </p>
            <%end%>
        <%end%>
    </div>
    <div class="InputsForm">   
        <h1>Login</h1> 
        <form action="/sessions" method="POST">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="email" name="login[email]" placeholder="Email">
            <input type="password" name="login[password]" placeholder="Password">
            <input type="submit" name="submit" class="submit" value="SignIn">
        </form>
    </div>

        
    </body>
  
    
    

</html>